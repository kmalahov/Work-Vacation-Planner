@using praktika.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vacation planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gray border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Планирование отпусков</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (LogPassesController.LogIn == false)
                        {                           
                            
                                <li class="nav-item">
                                <a class="nav-link text-dark disabled" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>                            
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark disabled" asp-area="" asp-controller="ApplicationForVacations" asp-action="Index">Заявка на отпуск</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark disabled" asp-area="" asp-controller="Vacations" asp-action="Index">Запланированные отпуска</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle disabled" data-toggle="dropdown" role="button" aria-expanded="false">Администрирование</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Workers" asp-action="Index">Список сотрудников</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="LogPasses" asp-action="Index">Пароли сотрудников</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Departments" asp-action="Index">Отделы</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="Index">Должности</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="ClassificationVacations" asp-action="Index">Классификатор отпусков</a>
                                </div>
                            </li>
                        }
                        else 
                        {
                            if(Role.role.Admin == 1)
                            {
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>                            
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ApplicationForVacations" asp-action="Index">Заявка на отпуск</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Vacations" asp-action="Index">Запланированные отпуска</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">Администрирование</a>
                                    <div class="dropdown-menu">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Workers" asp-action="Index">Список сотрудников</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="LogPasses" asp-action="Index">Пароли сотрудников</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Departments" asp-action="Index">Отделы</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="Index">Должности</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="ClassificationVacations" asp-action="Index">Классификатор отпусков</a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>                            
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ApplicationForVacations" asp-action="Index">Заявка на отпуск</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Vacations" asp-action="Index">Запланированные отпуска</a>
                                </li>
                            }                            
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="LogPasses" asp-action="Logout">Выйти</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Practice by Малахов Константин Андреевич ПИ-20-3 - <a href="https://github.com/kmalahov/Work-Vacation-Planner/tree/main/praktika">Исходный код</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
